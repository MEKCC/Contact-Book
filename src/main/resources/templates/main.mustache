<div class="container">

    {{#message}}
        <div class="alert alert-danger" role="alert">
            <p class="text-center"><strong>{{message}}</strong></p>
        </div>
    {{/message}}

    <div>
        <form method="post">
            <input type="text" name="fullName" placeholder="Enter full name"/>
            <input type="text" name="firstName" placeholder="Enter first name">
            <input type="text" name="lastName" placeholder="Enter last name">
            <input type="text" name="phoneNumber" placeholder="Enter phone number">
            <input type="text" name="cellPhoneNumber" placeholder="Enter cell phone number">
            <input type="text" name="address" placeholder="Enter address">
            <button type="submit">Create</button>
        </form>
    </div>

    <div>Find contacts</div>
    <form method="get" action="findContact">
        <input type="text" name="fullName">
        <button type="submit">Search</button>
    </form>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Full name</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Phone number</th>
                <th>Cell phone number</th>
                <th>Address</th>
                <th>Delete</th>
                <th>Update</th>
            </tr>
            </thead>
            <tbody>
            {{#contacts}}
                <tr>
                    <td>{{fullName}}</td>
                    <td>{{firstName}}</td>
                    <td>{{lastName}}</td>
                    <td>{{phoneNumber}}</td>
                    <td>{{cellPhoneNumber}}</td>
                    <td>{{address}}</td>
                    <!--                                <td><a href="/delete/{{id}}">Delete</a></td>-->
                    <td><a href="/delete/{{fullName}}">Delete</a></td>
                    <td><a href="/update/{{fullName}}">Update</a></td>
                </tr>
            {{/contacts}}
            </tbody>
        </table>
    </div>

</div>

</body>
</html>