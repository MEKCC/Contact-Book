<html>
<head>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
          integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>

<body>
<div class="container">

    {{#message}}
        <div class="alert alert-danger" role="alert">
            <p class="text-center"><strong>{{message}}</strong></p>
        </div>
    {{/message}}

    <div>
        <form name="contact" action="/updateContact" method="post">
            <input type="hidden" name="id" value="{{updateContact.id}}">
            <input type="text" name="fullName" value="{{updateContact.fullName}}"/>
            <input type="text" name="firstName" value="{{updateContact.firstName}}">
            <input type="text" name="lastName" value="{{updateContact.lastName}}">
            <input type="text" name="phoneNumber" value="{{updateContact.phoneNumber}}">
            <input type="text" name="cellPhoneNumber" value="{{updateContact.cellPhoneNumber}}">
            <input type="text" name="address" value="{{updateContact.address}}">
            <button type="submit">Update</button>
        </form>
    </div>

</div>

</body>
</html>